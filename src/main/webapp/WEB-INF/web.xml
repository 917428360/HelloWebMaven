<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>HelloWebMaven</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>primer ejemplo paraa pintar hola mundo por pantalla</description>
    <display-name>MiPrimerServlet</display-name>
    <servlet-name>MiPrimerServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.MiPrimerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MiPrimerServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CandidatoServlet</display-name>
    <servlet-name>CandidatoServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.CandidatoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CandidatoServlet</servlet-name>
    <url-pattern>/candidato</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginServlet</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogOutServlet</display-name>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogOutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CalculadoraServlet</display-name>
    <servlet-name>CalculadoraServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.CalculadoraServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalculadoraServlet</servlet-name>
    <url-pattern>/calcular</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>PuntuacionesServlet</display-name>
    <servlet-name>PuntuacionesServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.PuntuacionesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PuntuacionesServlet</servlet-name>
    <url-pattern>/ranking</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error-404.jsp</location>
  </error-page>
  <jsp-config>
    <taglib>
      <taglib-uri>com.ipartek.formacion.tag</taglib-uri>
      <taglib-location>/WEB-INF/tag/HelloTag.tld</taglib-location>
    </taglib>
  </jsp-config>
  <servlet>
    <description>Controlador para soportar operaciones CRUD para planetas</description>
    <display-name>PlanetServlet</display-name>
    <servlet-name>PlanetServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.PlanetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PlanetServlet</servlet-name>
    <url-pattern>/planets</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>com.ipartek.formacion.controller.listener.InitListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>PersonaServlet</display-name>
    <servlet-name>PersonaServlet</servlet-name>
    <servlet-class>com.ipartek.formacion.controller.PersonaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PersonaServlet</servlet-name>
    <url-pattern>/persona</url-pattern>
  </servlet-mapping>
</web-app>